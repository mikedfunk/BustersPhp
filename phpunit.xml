<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
<php>
    <server name="HTTP_HOST" value="mysite.com" />
    <server name="DOCUMENT_ROOT" value="/path/to" />
</php>
    <testsuites>
        <testsuite name="Application Test Suite">
            <directory>./tests/MikeFunk/BustersPhp/Tests/</directory>
        </testsuite>
    </testsuites>

    <logging>
            <log type="coverage-html" target="build/coverage" title="QueryStringer" />
            <log type="coverage-clover" target="build/logs/clover.xml" />
    </logging>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src/</directory>
        </whitelist>
        <blacklist>
            <directory suffix=".php">./src/MikeFunk/BustersPhp/Support/</directory>
        </blacklist>
    </filter>

</phpunit>
